{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./",
    "outDir": "bundle",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
